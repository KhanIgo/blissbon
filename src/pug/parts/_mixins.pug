mixin page_title(title)
    .row.row-page-title
        .container.page-title
            h3= title
        
mixin shop_nav_item(title)
    li
        a.btn.btn-trans(href="#")= title

mixin team_item(img)
    .team-item
        .photo-wrpr
            img.photo(src=''+img, alt='')
        .name
            span.name-2 Фамилия
            span.name-1 Имя
            span.name-3 Отчество
        .links
            a.sn.sn-fb(href='#')
            a.sn.sn-inst(href='#')
        
mixin prod(image)
    .prod
        .prod__img-wrpr
            img.prod__img(src=''+image, alt='')
            span.prod__photo-bg
            .hover
                a.hover-to-cart(href='#')
        .prod__price
            p 170 Р.
        .prod__name
            p Черная смородина
        .prod__name-sub
            p (каждый день)
        .prod__desc
            p
                | Начинка: сливочно-творожный крем с курдом из черной смородины Декор: итальянская меренга, ягода.
        
        
mixin gallery_item(img1, img2)
    .gallery_item
        a(href='#')
            img(src=''+img1, alt='')
        a(href='#')
            img(src=''+img2, alt='')

