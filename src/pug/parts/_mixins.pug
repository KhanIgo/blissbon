mixin master_class(image, name, desc)
    .master_class.mc
        .mc__photo-wrpr
            img(src="/images/master-class/"+image)
        .mc__name
            p= name
        .mc__desc
            p= desc
            
mixin cart_prod(image)
    .cart_prod.cp
        button.cp__remove
        .cp__photo-wrpr
            img(src="/images/cart/"+image)
        .cp__cnt
            .cp__name
                .cp__name-1
                    p Черная смородина
                .cp__name-2
                    p (каждый день)
            .cp__price
                p 170 р. шт.
            .cp__qty-and-total
                .cp__qty
                    .cp__qty-title
                        p Количество
                    .qty-controls
                        button.qty-control.decrement
                        input.qty-input(type="text", value="3")
                        button.qty-control.increment
                .cp__total
                    .cp__total-title
                        p Общая стоимость
                    .cp__total-value
                        p 510 р.
        
        
            


mixin pagination()
    .pagination
        a(href="#").pagination__prev
        ul.pagination-ul
            li: a(href="#") 1
            li.active: a(href="#") 2
            li: a(href="#") 3
            li: a(href="#") 4
        a(href="#").pagination__next